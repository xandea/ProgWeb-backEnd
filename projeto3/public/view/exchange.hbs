                                    <option value="JPY">JPY	Yen japonês</option>
                                    <option value="MXN">MXN	Peso mexicano</option>
                                    <option value="NOK">NOK	Coroa norueguesa</option>
                                    <option value="NZD">NZD	Dólar neozelandês</option>
                                    <option value="PYG">PYG	Guaraní Paraguaio</option>
                                    <option value="SEK">SEK	Coroa sueca</option>
                                    <option value="USD">USD	Dólar Americano</option>
                                    <option value="UYU">UYU	Peso Uruguaio</option>
                                </select>
                        </section>
                        <button onClick="" class="buttonConverte"> Converter </button>
                    </div>
                </div>
                <div class="divResultado">
                        <section class="sectionResultadoOne" >
                            <h3 class="tagh3">Resultado da Cotação</h3>
                            <section class="sectionData">
                                <label class="labelData">Data da Cotação:  <span class="spanData">{dia}/{mes}/{ano}</span></label>
                                <label class="labelData">Horário da Cotação: <span class="spanData">{horario}:{minuto}</span></label>
                            </section>
                        </section>
                    
                    <section  class="sectionResultadoTwo">
                            <label class="moedaBase" >{valor} {dadosDaRequesicao['base_code']} equivale a {dadosDaRequesicao['conversion_result']} BRL</label>
                            <label class="moedaValor" >{valor} {dadosDaRequesicao['base_code']} equivale a {dadosDaRequesicao['conversion_result']} {dadosDaRequesicao['target_code']} </label>
                    </section>
                </div>
            </div>
    </body>
</html>